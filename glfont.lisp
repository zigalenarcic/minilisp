(function gl-vector-letter (l)
          (if (and (> l 0) (< l 127))
            (do
              (glBegin GL_LINE_STRIP)
              (set make-dot 0)
              (set letter-list (nth *gl-font* l))
              (loop-list (e letter-list)
                         (set x (first e))
                         (set y (second e))

                         (if (= x -5)
                           (set make-dot 1)
                           (do
                             (if (= x -1)
                               (do
                                 (glEnd)
                                 (glBegin GL_LINE_STRIP))
                               (do
                                 (if (= make-dot 1)
                                   (do
                                     (glEnd)
                                     (glBegin GL_LINE_LOOP)
                                     (glVertex3d (- x 0.25) y 0.0)
                                     (glVertex3d x (- y 0.25) 0.0)
                                     (glVertex3d (+ x 0.25) y 0.0)
                                     (glVertex3d x (+ y 0.25) 0.0)
                                     (glEnd)
                                     (glBegin GL_LINE_STRIP))
                                   (glVertex3d x y 0.0)
                                   )
                                 (set make-dot 0)
                                 )
                               )
                               ))

                         )
              (glEnd))))

(function gl-vector-text (x y size s)
          (glPushMatrix)
          (glTranslated x y 0.0)
          (glScaled (/ size 4.0) (/ size 4.0) 1.0)
          (set l (length s))
          (set pos 0)
          (loop (i 0) (< i l) (+ 1 i)
                (set letter (aget s i))
                (if (= letter 10)
                  (do
                    -- new line
                    (glTranslated (* -3.0 pos) 6.0 0.0)
                    (set pos 0))
                  (do
                    (gl-vector-letter letter)
                    (glTranslated 3.0 0.0 0.0)
                    (set pos (+ pos 1))))
                )
          (glPopMatrix))
